<%= render "static/adminToolbar" %>

<h2>Listing Sport Routes</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Zoom</th>
      <th>Description</th>
      <th>Directions</th>
      <th>Wall</th>
      <th>Danger rating</th>
      <th>Bolts</th>
      <th>Stars</th>
      <th>Pitches</th>
      <th>Yds grade</th>
      <th>Anchor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sport_routes.each do |sport_route| %>
      <tr>
        <td><%= sport_route.name %></td>
        <td><%= sport_route.latitude %></td>
        <td><%= sport_route.longitude %></td>
        <td><%= sport_route.zoom %></td>
        <td><%= sport_route.description %></td>
        <td><%= sport_route.directions %></td>
        <td><%= sport_route.wall %></td>
        <td><%= sport_route.danger_rating %></td>
        <td><%= sport_route.bolts %></td>
        <td><%= sport_route.stars %></td>
        <td><%= sport_route.pitches %></td>
        <td><%= sport_route.yds_grade %></td>
        <td><%= sport_route.anchor %></td>
        <td><%= link_to 'Show', sport_route %></td>
        <td><%= link_to 'Edit', edit_sport_route_path(sport_route) %></td>
        <td><%= link_to 'Destroy', sport_route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

