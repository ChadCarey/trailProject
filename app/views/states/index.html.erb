<h2>Listing States</h2>

<table>
  <thead>
    <tr>
      <th>Region</th>
      <th>Name</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Zoom</th>
      <th>Description</th>
      <th>History</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.region.name %></td>
        <td><%= state.name %></td>
        <td><%= state.latitude %></td>
        <td><%= state.longitude %></td>
        <td><%= state.zoom %></td>
        <td><%= state.description %></td>
        <td><%= state.history %></td>
        <td><%= link_to 'Show', state %></td>
        <td><%= link_to 'Edit', edit_state_path(state) %></td>
        <td><%= link_to 'Destroy', state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

