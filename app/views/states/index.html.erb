<%= render "static/adminToolbar" %>

<h2>Listing States</h2>

<table class="index-table">
  <thead>
    <tr class="index-th">
      <th>Name</th>
      <th>Region</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Zoom</th>
      <th>Description</th>
      <th>History</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr class="index-tr">
        <td><%= state.name %></td>
        <td><%= if (state.region.name != nil) then state.region.name else "DELETED, PLEASE RE-SELECT A REGION" end %></td>
        <td><%= state.latitude %></td>
        <td><%= state.longitude %></td>
        <td><%= state.zoom %></td>
        <td><%= state.description %></td>
        <td><%= state.history %></td>
        <td class="index-action"><%= link_to 'Show', state %></td>
        <td class="index-action"><%= link_to 'Edit', edit_state_path(state) %></td>
        <td class="index-action"><%= link_to 'Destroy', state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

