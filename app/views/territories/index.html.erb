<h2>Listing Territories</h2>

<table class="index-table">
  <thead>
    <tr class="index-th">
      <th>Name</th>
      <th>Area</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>Zoom</th>
      <th>Directions</th>
      <th>Description</th>
      <th>History</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @territories.each do |territory| %>
      <tr class="index-tr">
        <td><%= territory.name %></td>
        <td><%= if (territory.area != nil) then territory.area.name else "DELETED, PLEASE RE-SELECT A AREA" end %> </td>
        <td><%= territory.longitude %></td>
        <td><%= territory.latitude %></td>
        <td><%= territory.zoom %></td>
        <td><%= territory.directions %></td>
        <td><%= territory.description %></td>
        <td><%= territory.history %></td>
        <td class="index-action"><%= link_to 'Show', territory %></td>
        <td class="index-action"><%= link_to 'Edit', edit_territory_path(territory) %></td>
        <td class="index-action"><%= link_to 'Destroy', territory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

