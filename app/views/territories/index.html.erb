<%= render "static/adminToolbar" %>
<h2>Listing Territories</h2>

<table>
  <thead>
    <tr>
      <th>Area</th>
      <th>Name</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>Zoom</th>
      <th>Directions</th>
      <th>Description</th>
      <th>History</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @territories.each do |territory| %>
      <tr>
        <td><%= territory.area.name %></td>
        <td><%= territory.name %></td>
        <td><%= territory.longitude %></td>
        <td><%= territory.latitude %></td>
        <td><%= territory.zoom %></td>
        <td><%= territory.directions %></td>
        <td><%= territory.description %></td>
        <td><%= territory.history %></td>
        <td><%= link_to 'Show', territory %></td>
        <td><%= link_to 'Edit', edit_territory_path(territory) %></td>
        <td><%= link_to 'Destroy', territory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Territory', new_territory_path %>
