<%= form_for(@area, html: {role: "form"}) do |f| %>
  <% if @area.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@area.errors.count, "error") %> prohibited this area from being saved:</h2>

      <ul>
      <% @area.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="field col-md-4">
      <%= f.label :state_id %><br>
      <%= select("area", "state_id", State.all.collect {|r| [ r.name, r.id ] }, {include_blank: ''},
       class: "form-control" )  %>
    </div>
    <div class="field col-md-4 <%=if @area.errors[:name].present? then 'has-error' else 'has-success' end %>">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="field col-md-4">
      <%= f.label :longitude %><br>
      <%= f.text_field :longitude, class: "form-control" %>
    </div>
    <div class="field col-md-4">
      <%= f.label :latitude %><br>
      <%= f.text_field :latitude, class: "form-control" %>
    </div>
    <div class="field col-md-4">
      <%= f.label :zoom %><br>
      <%= f.number_field :zoom, class: "form-control" %>
    </div>
    <div class="field col-md-4">
      <%= f.label :weather %><br>
      <%= f.text_field :weather, class: "form-control" %>
    </div>
    <div class="field col-md-4">
      <%= f.label :description %><br>
      <%= f.text_area :description, class: "form-control" %>
    </div>
    <div class="field col-md-4">
      <%= f.label :history %><br>
      <%= f.text_area :history, class: "form-control" %>
    </div>
    <div class="actions col-md-12">
      <%= f.submit class: "btn btn-default" %>
    </div>
  </div>
<% end %>
