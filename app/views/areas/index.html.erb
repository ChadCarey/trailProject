<h2>Listing Areas</h2>

<table class="table table-condensed table-bordered table-hover table-responsive">
  <thead>
    <tr class="info">
      <th>Name</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>Zoom</th>
      <th>Weather</th>
      <th>Description</th>
      <th>History</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr class="success">
        <td><%= area.name %></td>
        <td><%= area.longitude %></td>
        <td><%= area.latitude %></td>
        <td><%= area.zoom %></td>
        <td><%= area.weather %></td>
        <td><%= area.description %></td>
        <td><%= area.history %></td>
        <td class="danger"><%= link_to 'Show', area %></td>
        <td class="danger"><%= link_to 'Edit', edit_area_path(area) %></td>
        <td class="danger"><%= link_to 'Destroy', area, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

