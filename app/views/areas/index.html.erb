<%= render "static/adminToolbar" %>
<h2>Listing Areas</h2>

<table class="index-table">
  <thead>
    <tr class="index-th">
      <th>Name</th>
      <th>State</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>Zoom</th>
      <th>Weather</th>
      <th>Description</th>
      <th>History</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr class="index-tr">
        <td><%= area.name %></td>
        <td><%= if (area.state != nil) then area.state.name else "DELETED, PLEASE RE-SELECT A STATE" end %></td>
        <td><%= area.longitude %></td>
        <td><%= area.latitude %></td>
        <td><%= area.zoom %></td>
        <td><%= area.weather %></td>
        <td><%= area.description %></td>
        <td><%= area.history %></td>
        <td class="index-action"><%= link_to 'Show', area %></td>
        <td class="index-action"><%= link_to 'Edit', edit_area_path(area) %></td>
        <td class="index-action"><%= link_to 'Destroy', area, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Area', new_area_path %>
