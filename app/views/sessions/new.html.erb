<h2>Login</h2>

<%= form_tag do %>
  <%= label_tag :username, 'Username:' %>
  <%= text_field_tag :username, params[:username] %>
  <%= label_tag :password, 'Password:' %>
  <%= password_field_tag :password, params[:password] %>
  <input type="submit" value="login"/> <br/>
<%- end %>

<%= link_to 'New User', new_user_path %>