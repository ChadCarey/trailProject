<h2>Listing Crags</h2>

<table class="index-table">
  <thead>
    <tr class="index-th">
      <th>Territory</th>
      <th>Name</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Zoom</th>
      <th>Directions</th>
      <th>Description</th>
      <th>History</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crags.each do |crag| %>
      <tr class="index-tr">
        <td><%= if crag.territory != nil then crag.territory.name else "DELETED, PLEASE RE-SELECT A TERRITORY" end%></td>
        <td><%= crag.name %></td>
        <td><%= crag.latitude %></td>
        <td><%= crag.longitude %></td>
        <td><%= crag.zoom %></td>
        <td><%= crag.directions %></td>
        <td><%= crag.description %></td>
        <td><%= crag.history %></td>
        <td class="index-action"><%= link_to 'Show', crag %></td>
        <td class="index-action"><%= link_to 'Edit', edit_crag_path(crag) %></td>
        <td class="index-action"><%= link_to 'Destroy', crag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

