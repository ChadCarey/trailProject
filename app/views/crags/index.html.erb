<h1>Listing crags</h1>

<table>
  <thead>
    <tr>
      <th>Territory</th>
      <th>Name</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>Zoom</th>
      <th>Directions</th>
      <th>Description</th>
      <th>History</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crags.each do |crag| %>
      <tr>
        <td><%= crag.territory.name %></td>
        <td><%= crag.name %></td>
        <td><%= crag.longitude %></td>
        <td><%= crag.latitude %></td>
        <td><%= crag.zoom %></td>
        <td><%= crag.directions %></td>
        <td><%= crag.description %></td>
        <td><%= crag.history %></td>
        <td><%= link_to 'Show', crag %></td>
        <td><%= link_to 'Edit', edit_crag_path(crag) %></td>
        <td><%= link_to 'Destroy', crag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

