<h2>Listing Regions</h2>

<table class="index-table">
  <thead>
    <tr class="index-th">
      <th>Name</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Zoom</th>
      <th>Description</th>
      <th>History</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr class="index-tr">
        <td><%= region.name %></td>
        <td><%= region.latitude %></td>
        <td><%= region.longitude %></td>
        <td><%= region.zoom %></td>
        <td><%= region.description %></td>
        <td><%= region.history %></td>
        <td class="index-action"><%= link_to 'Show', region %></td>
        <td class="index-action"><%= link_to 'Edit', edit_region_path(region) %></td>
        <td class="index-action"><%= link_to 'Destroy', region, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

