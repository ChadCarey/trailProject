<table class="index-table">
  <thead>
    <tr class="index-th">
      <th>Username</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>User type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr class="index-tr">
        <td><%= user.username %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.user_type %></td>
        <td class="index-action"><%= link_to 'Show', user %></td>
        <td class="index-action"><%= link_to 'Edit', edit_user_path(user) %></td>
        <td class="index-action"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
