<h1>Listing trail_types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trail_types.each do |trail_type| %>
      <tr>
        <td><%= trail_type.name %></td>
        <td><%= link_to 'Show', trail_type %></td>
        <td><%= link_to 'Edit', edit_trail_type_path(trail_type) %></td>
        <td><%= link_to 'Destroy', trail_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Trail type', new_trail_type_path %>
